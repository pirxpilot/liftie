{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true
  },
  "files": {
    "includes": [
      "**",
      "!pnpm-lock.yaml",
      "!bin/generate",
      "!test/resorts/example",
      "!test/replay",
      "!meta/liftie.json",
      "!templates"
    ]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "none",
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "expand": "always"
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": {
        "useGenericFontNames": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredDependencies": "error",
        "noUndeclaredVariables": "error",
        "noUnusedFunctionParameters": "error",
        "useImportExtensions": "error"
      },
      "complexity": {
        "noForEach": "off",
        "useLiteralKeys": "off",
        "noImportantStyles": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useDefaultParameterLast": "error",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noUselessElse": "error"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "useIterableCallbackReturn": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/sw.template.js"
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      },
      "javascript": {
        "globals": [
          "options"
        ]
      }
    },
    {
      "includes": [
        "**/test/resorts/**/*.js"
      ],
      "javascript": {
        "formatter": {
          "quoteProperties": "preserve"
        }
      }
    }
  ]
}
